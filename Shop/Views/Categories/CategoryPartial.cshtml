@model List<Category>
@using Shop.Models

<style>
    #div-u {
        padding-top: 30px;
        margin-top: 50px;
        background-color: black;
        text-decoration: none;
    }

    .div-cate {
        height: 30px;
        width: 100%;
    }

    a {
        color: white;
        text-decoration: none;
        font-size: x-large;
    }

        a:hover {
            text-decoration: none;
            color:grey;
        }
</style>
<ul style="list-style-type:none" id="div-u">
    @{
        foreach (var item in Model)
        {
            <li class="div-cate">
                @Html.ActionLink(item.NameCate, "Index", "Products", new { category = item.IDCate.Trim() }, "")
            </li>
            <hr />
        }
    }
</ul>