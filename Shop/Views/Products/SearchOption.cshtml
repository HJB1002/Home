@model  IEnumerable<Shop.Models.Product>
    <div style="margin-top:100px"></div>

@{
    ViewBag.Title = "SearchOption";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SearchOption</h2>
@using(Html.BeginForm("SearchOption", "Products"))
            {
                <text>Từ</text> <input type="number" name="min" />
                <text>Đến</text> <input type="number" name="max" />
                <input type="submit" value="Search" />
                <div class="container">
                    <div class="row">
                        @foreach(var pro in Model)
                {
                    <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="pro-card">
                            <p>@Html.DisplayFor(model => pro.ProductID)</p>
                            <img src="@Url.Content(pro.ImagePro)" height="150" width="150" />
                            <p>@Html.DisplayFor(model => pro.NamePro)</p>
                            <p>@Html.DisplayFor(model => pro.Price)</p>
                            <a href="/ShoppingCart/AddToCart/@pro.ProductID" class="btn btn-default">Buy</a>
                        </div>
                    </div>
                }
                    </div>
                </div>

            }
