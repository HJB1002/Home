@model Shop.Models.Product
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .content {
        display: flex;
        flex-direction: row;
        height: 100%;
        width: 100%;
    }

    .content-div {
        flex-wrap: wrap;
        max-height: 400px;
        width: 40%;
        min-width: 15%;
        border: 1px solid black;
    }

    dd {
        font-family: Arial;
        font-size: 24px;
        margin: 15px;
    }

    .buyButton {
        width: 45%;
        height: 60px;
        line-height: 50px;
        text-align: center;
        font-family: Arial;
        font-size: 30px;
        background-color: #ffc107;
        border-radius: 60px;
    }

    table {
        margin: 0 auto;
        text-align: center;
        border-collapse: collapse;
        border: 1px solid #d4d4d4;
        font-size: 20px;
        background: #fff;
    }

        table th {
            background: #e7e7e7;
        }

        table th, table td {
            padding: 20px 50px;
        }

    div.stars {
        width: 270px;
        display: inline-block;
    }

    input.star {
        display: none;
    }

    label.star {
        float: right;
        padding: 10px;
        font-size: 36px;
        color: #444;
        transition: all .2s;
    }

    input.star:checked ~ label.star::before {
        content: '\f005';
        color: #FD4;
        transition: all .25s;
    }

    input .star-5:checked ~ label.start:before {
        color: #FE7;
        text-shadow: 0 0 20px #952;
    }

    input .star-1:checked ~ label.start:before {
        color: #F62;
    }

    label.star:hover {
        transform: rotate(-15deg)scale(1.3);
    }

    label.star:before {
        content: '\f006';
        font-family: FontAwesome;
    }
</style>
<div class="content">
    <div class="content-div">
        <img @*style="border: 1px solid lightgrey"*@ src="@Url.Content(Model.ImagePro.ToString())" height="400" width="450" />
    </div>
    <div class="content-div">
        <div class="stars">
            <form action="">
                <input type="radio" class="star star-5" id="star-5" name="star" />
                <label class="star star-5" for="star-5"></label>
                <input type="radio" class="star star-4" id="star-4" name="star" />
                <label class="star star-4" for="star-4"></label>
                <input type="radio" class="star star-3" id="star-3" name="star" />
                <label class="star star-3" for="star-3"></label>
                <input type="radio" class="star star-2" id="star-2" name="star" />
                <label class="star star-2" for="star-2"></label>
                <input type="radio" class="star star-1" id="star-1" name="star" />
                <label class="star star-1" for="star-1"></label>
            </form>
        </div>
        <dl>
            <dd style="font-weight:bold">
                @Html.DisplayFor(model => model.NamePro)
            </dd>

            <dd>
                @Html.DisplayFor(model => model.Price)đ
            </dd>

            <dd>
                Thương hiệu: @Html.DisplayFor(model => model.Category1.NameCate)
            </dd>
            <dd>
                @*<a href="/ShoppingCart/AddToCart/model.Pro" class="btn btn-success">Buy</a>*@
                @Html.ActionLink("Mua", "AddToCart", "ShoppingCart", new { id = Model.ProductID }, new { @class = "btn btn-success buyButton" })
                @Html.ActionLink("Thêm vào giỏ hàng", "themGioHang", "ShoppingCart", new { id = Model.ProductID }, new { @class = "btn btn-success buyButton" })
            </dd>
        </dl>
    </div>
</div>
<h2>Mô tả</h2>
<p style="font-family:Arial; border:1px solid lightgrey; height:fit-content; width:80%; font-size:20px">
    @Html.DisplayFor(model => model.DecriptionPro)
</p>

