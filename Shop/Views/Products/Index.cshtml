@model IEnumerable<Shop.Models.Product>
@using Shop.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sản phẩm</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Create New (with image)", "UploadProduct", null, new { @class = "btn btn-default" })

</p>
@using (Html.BeginForm("Index", "Products", FormMethod.Get))
{
    @Html.DropDownList("Category", null, htmlAttributes: new { @class = "form-control" })
    <input type="submit" value="Cập nhật" class="btn btn-default" />
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.NamePro)*@ Tên sản phẩm
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.DecriptionPro)*@ Miêu tả
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Price)*@ Giá
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.ImagePro)*@ Ảnh
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Category1.NameCate)*@ Loại hàng
        </th>
        <th>Số lượng</th>
        <th>Size</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamePro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DecriptionPro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.ImagePro)*@
                <img src="@Url.Content(item.ImagePro)" height="100" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category1.NameCate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductID }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
}