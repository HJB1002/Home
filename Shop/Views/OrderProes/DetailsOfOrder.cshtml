@model IEnumerable<Shop.Models.OrderDetail>
@{
    ViewBag.Title = "DetailsOfOrder";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết đơn hàng</h2>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Mã đơn hàng
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>Tổng tiền</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDProduct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <th>
                @Html.DisplayFor(moedlItem => item.TotalPrice)
            </th>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |*@
                @Html.ActionLink("Details", "Details","OrderDetails" , new { id = item.ID }, new {@class = "btn btn-default"})|
                @Html.ActionLink("Delete", "Delete", "OrderDetails", new { id = item.ID }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>
